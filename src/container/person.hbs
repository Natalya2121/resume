{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}



<div>
    {{#with person}}
        <main>
            <section>
               
                    {{> title data=name big=true}}
                    <div>{{age}} years, {{gender}}</div>
                    <br>

                    {{#with address}}
                        <div><address>{{street}}, {{city}} ({{state}})</address></div>
                        {{!-- <div><address>{{city}} ({{state}})</address></div> --}}
                        <div><address>{{zip}} {{country}}</address></div>
                    {{/with}}
            </section>
            <hr>

             <section>
                    {{> title data="Education"}}
                    <ul>
                        {{#each education}}
                            <li>
                            <div>Degree {{degree}},  major {{major}}</div>
                            <div><b>{{university}}</b>,  graduated in {{graduationYear}}</div>
                            </li>
                        {{/each}}
                    </ul>
            </section>
            <hr>

             <section>
                    {{> title data="Work Experience"}}
                    <ul>
                        {{#each workExperience}}
                            <li>
                                <div><b>{{company}}</b> <em>founded in {{year_founded}}</em></div>
                                <div><b>Industry {{industry}}</b></div>
                                <br>
                                <div><strong>Position: {{title}}</strong></div>
                                <div>{{startDate}} - {{endDate}}</div>
                                <div><em>Responsibilities:</em></div>
                                <ul>
                                    {{#each responsibilities}}
                                        <li>
                                            {{this}}
                                        </li>
                                    {{/each}}
                                </ul>
                                <hr>
                                <br>
                                <div><b>Employees:</b></div>
                                <ul>
                                    {{#each employees}}
                                        <li>
                                            <div><b>{{name}}</b></div>
                                            <div><b>Position: {{position}}, department: {{department}} </b></div>
                                            <br>
                                            <div><em>Projects:</em></div>
                                            <ul>
                                                {{#each projects}}
                                                    <li>
                                                        <div><b>{{name}}</b> ({{status}})</div>
                                                        <div>Description: {{description}}</div>
                                                        <div><em>Teams:</em></div>
                                                        <ul>
                                                            {{#each teams}}
                                                                <li>
                                                                    <div><b>{{team_name}}</b></div>
                                                                    <div><b>{{team_leader.title}}</b> {{> link href=team_leader.email text=team_leader.name noline=true}}</div>
                                                                    <div><em>Team members:</em></div>
                                                                    <ul>
                                                                        {{#each team_members}}
                                                                            <li>
                                                                                <div><b>{{title}}</b> {{> link href=email text=name noline=true}}</div>
                                                                                <div><em>Skills:</em></div>
                                                                                <ul>
                                                                                    {{#each skills}}<li>{{this}}</li>{{/each}}
                                                                                </ul>
                                                                                <div><em>Projects:</em></div>
                                                                                <ul>
                                                                                    {{#each projects}}
                                                                                    <li>
                                                                                        <b>{{name}}</b> ({{description}})
                                                                                        <div><em>Technologies:</em></div>
                                                                                        <ul>
                                                                                            {{#each technologies}}<li>{{this}}</li>{{/each}}
                                                                                        </ul>
                                                                                        <div><em>Team members:</em></div>
                                                                                        <ul>
                                                                                            {{#each team_members}}<li><b>{{name}}</b> {{title}}</li>{{/each}}
                                                                                        </ul>
                                                                                    </li>{{/each}}
                                                                                </ul>
                                                                            </li>
                                                                        {{/each}}
                                                                    </ul>
                                                                </li>
                                                            {{/each}}
                                                        </ul>
                                                    </li>
                                                {{/each}}
                                            </ul>
                                        </li>
                                    {{/each}}
                                </ul>
                            </li>
                        {{/each}}
                    </ul>
            </section>
            <hr>
        </main>
    {{/with}}
    
</div>

