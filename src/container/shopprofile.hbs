<main class="p-3">
    <div class="row">
        <div class="col-12 mb-5">
            {{#with navigation}}
            <div class="card">
                <div class="card-body">
                    <div class="nav ">
                        {{#with links.[0]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with links.[1]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with links.[2]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link disabled">{{text}}</a>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
        <h1 class="my-5">{{header}}</h1>

        {{#with purchase}}
            <div class="col-12  mb-5">
                <div class="nav nav-tabs ">
                    <div class="div-item">
                        <a href="#" class="nav-link active">{{tabs.[0]}}</a>
                    </div>
                    <div class="div-item">
                        <a href="#" class="nav-link ">{{tabs.[1]}}</a>
                    </div>
                </div>
            </div>

            {{#with actionBlock}}
                <div class="col-4">
                    <input value="{{input.placeholder}}" class="form-control"></input>
                </div>
                <div class="col-8">
                    {{#each buttons}}
                        <a href="{{link}}" class="me-3 btn {{#if isSuccess}}btn-success{{/if}}{{#if isOutline}}btn-outline-success{{/if}}{{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
                    {{/each}}
                </div>
            {{/with}}
            <div class="my-3"><hr></div>

            {{#each itemList}}
                {{> purchaseItem itemList=this}}
            {{/each}}
        {{/with}}
        <div class="my-3"><hr></div>

        {{#with userInfo}}
            <h2 class="my-5">{{title}}</h2>
            {{#with profileData}}
            <div class="col-12">
                <div class="card px-2 mb-3">
                    <div class="card-body px-2">
                        <h3 class="card-title mb-4">{{title}}</h3>

                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-4">
                                        <div>{{fullName.surname.title}}</div>
                                        <div><b>{{fullName.surname.value}}</b></div>
                                    </div>
                                    <div class="col-4">
                                        <div>{{fullName.name.title}}</div>
                                        <div><b>{{fullName.name.value}}</b></div>
                                    </div>
                                    <div class="col-4">
                                        <div>{{fullName.middleName.title}}</div>
                                        <div><b>{{fullName.middleName.value}}</b></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-4">
                                        <div>{{otherInfo.birthday.title}}</div>
                                        <div><b>{{otherInfo.birthday.value}}</b></div>
                                    </div>
                                    <div class="col-4">
                                        <div>{{otherInfo.sex.title}}</div>
                                        <div><b>{{otherInfo.sex.value}}</b></div>
                                    </div>
                                    <div class="col-4">
                                        <div>{{otherInfo.language.title}}</div>
                                        <div><b>{{otherInfo.language.value}}</b></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/with}}

                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    {{#each buttons}}
                                        <div class="col-4">
                                            <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-outline-secondary{{/if}}{{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


            {{#with recipients}}
            <div class="col-12">
                <div class="card px-2 mb-3">
                    <div class="card-body">
                        <h3 class="card-title mb-4">{{title}}</h3>
                        <div class="row">
                            {{#each users}}
                            <div class="col-4">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="card-title"><h5>{{name}}</h5></div>
                                        <div class="mb-2">{{phone}}</div>
                                        <div><a href="{{button.link}}" class="btn btn-primary">{{button.text}}</a></div>
                                    </div>
                                </div>
                            </div>                            
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}

            {{#with contacts}}
            <div class="col-12">
                <div class="card px-2 mb-3">
                    <div class="card-body">
                        <h3 class="card-title mb-4">{{title}}</h3>
                        <div class="row">
                            {{#each contactData}}
                            <div class="col-4">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="card-title"><h5>{{title}}</h5></div>
                                        <div class="mb-2">{{value}}</div>
                                        <div><a href="{{button.link}}" class="btn {{#if button.isPrimary}}btn-primary{{/if}}{{#if button.isSecondary}}btn-outline-secondary{{/if}}{{#if button.isDanger}}btn-outline-danger{{/if}}">{{button.text}}</a></div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}

        {{/with}}
        <div class="mt-5"><hr></div>

        {{#each footer}}
            <div class="nav flex-column col-2">
                {{#with this.[0]}}
                <div class="">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/with}}
                {{#with this.[1]}}
                <div class="">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/with}}
                {{#with this.[2]}}
                <div class="">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/with}}
                {{#with this.[3]}}
                <div class="">
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                </div>
                {{/with}}
            </div>
        {{/each}}
        <div class="my-5"></div>

    </div>
</main>

