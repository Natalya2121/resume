<main class="p-3">
    <div class="row">
        <div class="col-12 mb-5">
            {{#with navigation}}
            <div class="card">
                <div class="card-body">
                    <div class="nav ">
                        {{#with links.[0]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with links.[1]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with links.[2]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link disabled">{{text}}</a>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}
        </div>

        <div class="col-12">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                    <li class="breadcrumb-item">
                        {{#if url}}<a href="{{url}}">{{name}}</a>{{else}}{{name}}{{/if}}
                    </li>
                {{/each}}
            </ol>
        </div>

        <h1 class="mt-5 mb-4">{{header}}</h1>

        {{#each sortBlock}}
            <div class="col-3">
                    <select class="form-select">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
            </div>
        {{/each}}
        <div class="mb-5"></div>

        {{#with filterBlock}}
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">{{sellers.title}}</div>
                        {{#each sellers.list}}
                            <div class="form-check mb-2">
                                <label class="form-check-label">{{value}}</label>
                                <input type="checkbox" class="form-check-input">
                            </div>
                        {{/each}}
                        <div class="my-3"><hr></div>

                        <div class="mb-3">{{brands.title}}</div>
                        <input value="{{brands.input.placeholder}}" class="form-control mb-3">
                        {{#each brands.options}}
                            <div class="form-check mb-2">
                                <label class="form-check-label">{{value}}</label>
                                <input type="checkbox" class="form-check-input">
                            </div>
                        {{/each}}
                        <div class="my-3"><hr></div>

                        <div class="mb-3">{{price.title}}</div>
                        <input value="{{price.range.from}}" class="form-control mb-3">
                        <input value="{{price.range.to}}" class="form-control mb-3">
                        <div><a href="{{price.button.link}}" class="btn btn-outline-secondary">{{price.button.text}}</a></div>
                        {{!-- <div class="my-3"><hr></div> --}}

                        {{#each filterList}}
                            <div class="my-3"><hr></div>
                            <div class="mb-3">{{title}}</div>
                            {{#each options}}
                                <div class="form-check mb-2">
                                    <label class="form-check-label">{{value}}</label>
                                    <input type="checkbox" class="form-check-input">
                                </div>
                            {{/each}}
                        {{/each}}

                    </div>
                </div>
            </div>
        {{/with}}

        <div class="col-8">
        <div class="row">
        {{#each goodsList}}
            {{> catalogItem goodsList=this}}
        {{/each}}
        </div>
        </div>
        <div class="mt-5"></div>

        {{#with service}}
            <div class="col-12">
                <div class="card text-bg-success">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">{{title}}</h2>
                        <p>{{description}}</p>
                        {{#each buttons}}
                            <div class="pt-3"><a href="{{link}}" class="btn btn-primary">{{text}}</a></div>
                        {{/each}}
                    </div>
                </div>
            </div>
        {{/with}}
        <div class="mt-5"><hr></div>

        {{#each footer}}
            <div class="nav flex-column col-2">
                {{#with this.[0]}}
                <div class="">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/with}}
                {{#with this.[1]}}
                <div class="">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/with}}
                {{#with this.[2]}}
                <div class="">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/with}}
                {{#with this.[3]}}
                <div class="">
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                </div>
                {{/with}}
            </div>
        {{/each}}
        <div class="mb-5"></div>

    </div>
</main>

