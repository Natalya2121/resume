<main class="p-3">
    <div class="row">
        <div class="col-12 mb-5">
            {{#with navigation}}
            <div class="card">
                <div class="card-body">
                    <div class="nav ">
                        {{#with links.[0]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with links.[1]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with links.[2]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link disabled">{{text}}</a>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
        
        {{#with formBlock}}
            <div class="col-8">
                <h1 class="mt-5 mb-3">{{header}}</h1>
                <h5 class="mb-5">{{rating.title}}: {{rating.value}}</h5>
                {{#with actionBlock}}
                    <div class="nav nav-tabs ">
                        {{#each tabs}}
                        <div class="div-item">
                            <a href="#" class="nav-link {{#if isActive}}active{{/if}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                    <div class="my-5"><hr></div>

                    {{#with report}}
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title mb-3"><h5>{{title}}</h5></div>
                                <div><a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a></div>
                            </div>
                        </div>
                    {{/with}}
                    <div class="my-5"><hr></div>
                {{/with}}

                {{#with feedbackBlock}}
                    <h2 class="mb-5">{{title}}</h2>
                    {{#each buttons}}
                        <a href="{{link}}" class="me-3 btn {{#if isWarning}}btn-warning{{/if}}{{#if isSuccess}}btn-success{{/if}}{{#if isDanger}}btn-danger{{/if}}">{{text}}</a>
                    {{/each}}
                {{/with}}
            </div>

            <div class="col-4">
                {{#with goodsInfo}}
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="mb-3"><img src="{{photo}}"></div>
                                <div><h4>{{name}}</h4></div>
                            </div>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="card-title mb-3"><h3>{{price}}</h3></div>
                                <div class="mb-3">{{#if inMarket}}Є в наявності{{else}}Немає в наявності{{/if}}</div>
                                {{#each buttons}}
                                    <div><a href="{{link}}" class="mb-2 btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-secondary{{/if}}">{{text}}</a></div>
                                {{/each}}
                            </div>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                {{seller.title}}:
                                <b>{{seller.value}}</b>
                            </div>
                        </div>
                {{/with}}
            </div>
        {{/with}}

        <div class="my-5"><hr></div>
        {{#each reviewList}}
            {{> reviewItem reviewList=this}}
            <div class="mb-5"></div>
        {{/each}}

        {{#with service}}
            <div class="col-12">
                <div class="card text-bg-success">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">{{title}}</h2>
                        <p>{{description}}</p>
                        {{#each buttons}}
                            <div class="pt-3"><a href="{{link}}" class="btn btn-primary">{{text}}</a></div>
                        {{/each}}
                    </div>
                </div>
            </div>
        {{/with}}
        <div class="mt-5"><hr></div>

        {{#each footer}}
            <div class="nav flex-column col-2">
                {{#with this.[0]}}
                <div class="">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/with}}
                {{#with this.[1]}}
                <div class="">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/with}}
                {{#with this.[2]}}
                <div class="">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/with}}
                {{#with this.[3]}}
                <div class="">
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                </div>
                {{/with}}
            </div>
        {{/each}}
        <div class="mb-5"></div>

    </div>
</main>

