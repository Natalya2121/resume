<main class="p-3">
    <div class="row">
        <div class="col-12 mb-5">
            {{#with navigation}}
            <div class="card">
                <div class="card-body">
                    <div class="nav ">
                        {{#with links.[0]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with links.[1]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                        {{/with}}
                        {{#with links.[2]}}
                        <div class="">
                            <a href="{{href}}" class="nav-link disabled">{{text}}</a>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}
        </div>

        {{#with newsBlock}}
            <h2 class="text-center mb-5">{{title}}</h2>
            {{#each cards}}
                <div class="col-3">
                    <div class="alert text-bg-dark">
                        <h6 class="mb-3">
                            {{title}} 
                            {{#if isNew}}<span class="badge text-bg-success rounded-pill">Нова</span>{{/if}}
                            {{#if isTop}}<span class="badge text-bg-danger rounded-pill">Топ</span>{{/if}}
                        </h6>
                        <p>{{description}}</p>
                    </div>
                </div>
            {{/each}}
        {{/with}}
        <div class="my-5"><hr></div>

        {{#with goodsBlock}}
            <div class="col-12  mb-5">
                <div class="nav nav-tabs ">
                    {{#each tabs}}
                        <div class="div-item">
                            <a href="#" class="nav-link {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}}">{{text}}</a>
                        </div>
                    {{/each}}
                </div>
            </div>
            {{#each cards}}
                <section class="col-4 mb-4">
                    <div class="card">
                        <img src="{{image}}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                {{title}}
                                {{#if isHot}}<span class="badge text-bg-warning rounded-pill text-uppercase">Hot!</span>{{/if}}
                                {{#if isNew}}<span class="badge text-bg-primary rounded-pill">Нове</span>{{/if}}
                            </h5>
                            <p class="">{{description}}</p>
                        </div>
                    </div>
                </section>
            {{/each}}
        {{/with}}
        <div class="my-5"><hr></div>

        {{#with subscribe}}
            <div class="col-12">
                <div class="card text-bg-dark">
                    <div class="card-body">
                        <h2 class="card-title mb-3">{{header}}</h2>
                        <p class="mb-0">{{description}}</p>
                        {{#each buttons}}
                            <div class="pt-3"><a href="{{link}}" class="btn btn-primary">{{text}}</a></div>
                        {{/each}}
                    </div>
                </div>
            </div>
        {{/with}}
        <div class="my-5"><hr></div>

        {{#with service}}
            <div class="col-12">
                <div class="card text-bg-success">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">{{title}}</h2>
                        <p>{{description}}</p>
                        {{#each buttons}}
                            <div class="pt-3"><a href="{{link}}" class="btn btn-primary">{{text}}</a></div>
                        {{/each}}
                    </div>
                </div>
            </div>
        {{/with}}
        <div class="mt-5"><hr></div>

        {{#with footer.[0]}}
            <div class="nav ">
                {{#each this}}
                <div class="col-2">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
        {{/with}}
        {{#with footer.[1]}}
            <div class="nav ">
                {{#each this}}
                <div class="col-2">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
        {{/with}}
        {{#with footer.[2]}}
            <div class="nav ">
                {{#each this}}
                <div class="col-2">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
        {{/with}}
        {{#with footer.[3]}}
            <div class="nav ">
                {{#each this}}
                <div class="col-2">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
        {{/with}}
        {{#with footer.[4]}}
            <div class="nav ">
                {{#each this}}
                <div class="col-2">
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                </div>
                {{/each}}
            </div>
        {{/with}}
        <div class="mb-5"></div>


    </div>
</main>

